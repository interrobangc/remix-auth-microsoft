{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2019",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "jsx": "react-jsx",
    "outDir": "./build"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
